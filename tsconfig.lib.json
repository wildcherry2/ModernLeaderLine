{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2022",
        "module": "es2022",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/dev-index.ts"]
}